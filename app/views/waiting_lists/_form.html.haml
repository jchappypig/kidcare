= form_for @waiting_list do |f|
  - if @waiting_list.errors.any?
    #error_explanation
      %h2= "#{pluralize(@waiting_list.errors.count, "error")} prohibited this waiting_list from being saved:"
      %ul
        - @waiting_list.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :child_name
    = f.text_field :child_name
  .field
    = f.label :child_age
    = f.number_field :child_age
  .field
    = f.label :parent_name
    = f.text_field :parent_name
  .field
    = f.label :phone
    = f.text_field :phone
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :postcode
    = f.text_field :postcode
  .field
    = f.label :expect_join_time
    = f.text_field :expect_join_time
  .field
    = f.label :days_per_week
    = f.text_field :days_per_week
  .actions
    = f.submit 'Save'
