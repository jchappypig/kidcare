- if activities.any?
  .row
    .large-12.columns
      %h3
        = "#{category} Program"
      - activities.each do |activity|
        %h4.inline
          = activity.day

        %table.ui-responsive{'data-mode' => 'reflow', 'data-role' => 'table'}
          %thead
            %tr
              %th Cognitive
              %th Cross Mentor
              %th Social
              %th Art and Craft
              %th Language
          %tbody
            %tr
              %td= RedCloth.new(activity.cognitive).to_html.html_safe
              %td= RedCloth.new(activity.cross_mentor).to_html.html_safe
              %td= RedCloth.new(activity.social).to_html.html_safe
              %td= RedCloth.new(activity.art_and_craft).to_html.html_safe
              %td= RedCloth.new(activity.language).to_html.html_safe
            %tr
              %td= activity.cognitive_outcome
              %td= activity.cross_mentor_outcome
              %td= activity.social_outcome
              %td= activity.art_and_craft_outcome
              %td= activity.language_outcome
